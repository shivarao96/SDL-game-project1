<?xml version="1.0" ?>
<States>
    <MENU>
        <TEXTURES>
            <texture filename="assets/gfx/button.png" ID="playbutton"/>
            <texture filename="assets/gfx/exit.png" ID="exitbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="Buttons" x="200" y="100" width="400" height="100" textureID="playbutton" numFrames="0" callbackID="1"/>
            <object type="Buttons" x="200" y="300" width="400" height="100" textureID="exitbutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </MENU>
    
    <PLAY>
        <TEXTURES>
            <texture filename="assets/gfx/helicopter.png" ID="helicopter"/>
            <texture filename="assets/gfx/helicopter2.png" ID="helicopter2"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="Helicopter" x="500" y="100" width="128" height="55" textureID="helicopter" numFrames="4"/>
            <object type="Helicopter2" x="100" y="100" width="128" height="55" textureID="helicopter2" numFrames="4"/>
        </OBJECTS>
    </PLAY>
    
    <PAUSE>
        <TEXTURES>
            <texture filename="assets/gfx/main.png" ID="mainbutton"/>
            <texture filename="assets/gfx/resume.png" ID="resumebutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="Buttons" x="300" y="200" width="200" height="80" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="Buttons" x="300" y="300" width="200" height="80" textureID="resumebutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </PAUSE>

    
    <GAMEOVER>
        <TEXTURES>
            <texture filename="assets/gfx/gameover.png" ID="gameovertext"/>
            <texture filename="assets/gfx/main.png" ID="mainbutton"/>
            <texture filename="assets/gfx/restart.png" ID="restartbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="AnimatedGraphic" x="300" y="100" width="190" height="30" textureID="gameovertext" numFrames="2" animSpeed="2"/>
            <object type="Buttons" x="300" y="200" width="200" height="80" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="Buttons" x="300" y="300" width="200" height="80" textureID="restartbutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </GAMEOVER>
</States>
